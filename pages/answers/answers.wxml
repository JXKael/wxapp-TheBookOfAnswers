<!--answers.wxml-->
<view class="container">
  <audio src="{{audio_src}}" id="myAudio"></audio>
  <view class="background">
    <image class="backgroundImg" src="../../assets/bg1.jpg" mode="aspectFill"></image> 
  </view>
  <view class="contentBg"></view>
  <view class="content" animation="{{contentAnimation}}">
      <text class="answerTxt">{{content}}</text>
  </view>
  <view class="subContent" animation="{{subContentAnimation}}">
    <text class="subContentTxt">{{subContent}}</text>
  </view>
  <view class="exp" animation="{{expAnimation}}">
    <text class="expTxt">{{exp}}</text>
  </view>
  <view class="table">
    <image id="table" class="tableImg" src="../../assets/table.png" bindtap="bindTap" bindlongpress="longPress" bindtouchend="touchEnd" animation="{{tableAnimation}}"></image>
  </view>
</view>